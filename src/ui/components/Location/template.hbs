<div>
  {{#if notFound}}
    <em>We couldn't load the requested location.</em>
  {{else}}
    <header>
      <h1 class="logo">
        <a href="/" class="logo-link" aria-label="Find another location" data-navigo data-test-home-link>
          Breethe
        </a>
      </h1>
    </header>
    <main class="location-data" data-test-location>
      <header>
        <h1 class="title" aria-label="Air quality at {{location.attributes.label}}">
          {{location.attributes.label}}
        </h1>
        <p class="updated-at" data-test-last-update>
          Last update: {{updatedDate}}
        </p>
      </header>
      <div class="indicator">
        <div class="indicator-content">
          {{#if loading}}
            <div class="loader" data-test-form-loader></div>
          {{else}}
            <strong class="indicator-index" aria-label="Air Quality">
              {{qualityLabel}}
            </strong>
            Air Quality
          {{/if}}
        </div>
      </div>
    </main>
    <aside>
      <div class="measurements-wrapper">
        <ul class="measurements">
          {{#each measurementLists.first key="@index" as |measurement|}}
            <MeasurementRow
              @value={{measurement.attributes.value}}
              @parameter={{measurement.attributes.parameter}}
              @unit={{measurement.attributes.unit}}
            />
          {{/each}}
        </ul>
        <ul class="measurements">
          {{#each measurementLists.second key="@id" as |measurement|}}
            <MeasurementRow
              @value={{measurement.attributes.value}}
              @parameter={{measurement.attributes.parameter}}
              @unit={{measurement.attributes.unit}}
            />
          {{/each}}
        </ul>
      </div>
    </aside>
  {{/if}}
</div>
