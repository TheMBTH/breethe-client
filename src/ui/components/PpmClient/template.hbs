<div data-test-ppm-client>
  {{#if isSearchMode}}
    <Search
      @searchTerm={{searchTerm}}
      @store={{store}}
      @router={{router}}
      @isSSR={{appState.isSSR}}
      @pullIndexedDB={{pullIndexedDB}}
      @searchResults={{searchResults}}
    />
  {{else if isResultsMode}}
    <Location
      @location={{location}}
      @store={{store}}
      @router={{router}}
      @updateParticles={{action updateParticles}}
    />
  {{/if}}
  {{#unless appState.isSSR}}
    <ParticlesBackground @index={{particlesIndex}} />
  {{/unless}}
</div>
