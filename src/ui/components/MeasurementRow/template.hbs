<li data-test-measurement={{paramName.base}}>
  <strong class="label" id="{{measurementLabelledId}}" data-test-measurement-label>
    <span data-test-measurement-label-base={{paramName.base}}>
      {{paramName.base}}
    </span>
    <sup class="label-sup" data-test-measurement-label-sup={{paramName.sup}}>
      {{paramName.sup}}
    </sup>
  </strong>
  <span aria-labelledby="{{measurementLabelledId}}" data-test-measurement-value-wrapper>
    {{#if valuePresent}}
      <span data-test-measurement-value={{@value}}>
        {{value}}
      </span>
      &nbsp;
      <span data-test-measurement-unit>
        {{#if isPPM}}
          ppm
        {{else}}
          &#181;g/m<sup>3</sup>
        {{/if}}
      </span>
    {{else}}
      <span aria-label="Value not present">
        &mdash;
      </span>
    {{/if}}
  </span>
</li>
